<?xml version="1.0" encoding="utf-8"?>
<com.example.mac.carwash.view.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_spi_visible="true"
    app:left_tv_visible="false"
    app:right_btn_visible="true"
    app:right_btn_src="@drawable/icon_notes"
    app:title_visible="true"
    app:title_text="扫码洗车">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="@drawable/border_white"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="车主姓名:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_info_member_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="会员等级:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_info_member_level"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/purple"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="车牌号码:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_info_car_num"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="本次消费:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_info_order_price"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="账户余额:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_info_banlance"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="剩余次数:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_info_remain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="28dp"
            android:layout_weight="1.6"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_washCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape1"
                android:gravity="center"
                android:text="洗车"
                android:textColor="@drawable/btn_font_style"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape1"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:text="结算"
                android:textColor="@drawable/btn_font_style"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center">
            <Button
                android:id="@+id/btn_QRCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape2"
                android:gravity="center"
                android:text="扫码"
                android:textColor="@drawable/btn_font_style"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</com.example.mac.carwash.view.CustomToolBar>