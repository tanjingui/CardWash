<?xml version="1.0" encoding="utf-8"?>
<com.example.mac.carwash.view.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_tv_visible="false"
    app:right_btn_visible="true"
    app:right_btn_src="@drawable/qr_code"
    app:title_visible="true"
    app:title_text="扫码洗车">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="@drawable/border_white"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="车主姓名:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_amount"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text="张三"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="会员等级:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_price"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text="大众尊享A会员"
                android:textColor="@color/purple"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="车牌号码:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_left_amount"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text="粤SS963121"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="本次消费:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_get_time"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text="32元"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="账户余额:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_termOfValidity"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text="1665.2元"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="剩余次数:"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text="16次"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="28dp"
            android:layout_weight="5"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_washCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:text="洗车"
                android:textColor="@drawable/btn_font_style"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_washCard_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:text="查看记录"
                android:textColor="@drawable/btn_font_style"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_QRContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null" />

    </LinearLayout>
</com.example.mac.carwash.view.CustomToolBar>